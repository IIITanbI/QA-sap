<?xml version="1.0" encoding="utf-8" ?>

<WebElement>
  <Name>TutorialCard</Name>
  <Description>Tutorial card</Description>
  <Locator>
    <IsRelative>False</IsRelative>
    <XPath>//div[contains(@class, 'tutorial-card') and not (contains(@class, 'template'))]//div[contains(@class, 'tutorial-card-wrapper')]</XPath>
  </Locator>

  <ChildWebElements>
    <WebElement>
      <Name>Title</Name>
      <Description>Tutorial title</Description>
      <Locator>.//*[@class='title']</Locator>
    </WebElement>
    <WebElement>
      <Name>Url</Name>
      <Description>Tutorial url</Description>
      <Locator>.//*[@class='title']/a</Locator>
    </WebElement>
    <WebElement>
      <Name>Description</Name>
      <Description>Tutorial description</Description>
      <Locator>.//*[contains(@class, 'description')]</Locator>
    </WebElement>
    <WebElement>
      <Name>Tag</Name>
      <Description>Tutorial tag</Description>
      <Locator>.//*[@class='tag']</Locator>
      <ChildWebElements>
        <WebElement>
          <Name>TagLink</Name>
          <Description>Tutorial tag link</Description>
          <Locator>.//a</Locator>
        </WebElement>
      </ChildWebElements>
    </WebElement>
    <WebElement>
      <Name>Status</Name>
      <Description>Tutorial status</Description>
      <Locator>.//div[@class='updated']</Locator>
    </WebElement>
  </ChildWebElements>
</WebElement>
